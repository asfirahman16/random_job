<%- include('../partials/head.ejs') %>
<title>Upload Profile Picture | Random Jobs</title>
<%- include('../partials/navprofilepages.ejs') %>

<style> 
    input[type=file] {
      width: 100%;
      padding: 12px 20px;
      box-sizing: border-box;
      border: 3px solid #ccc;
    }
</style>

<!-- signup section start -->
<section class="login-wrapper">
    <div class="container">
        <div class="col-md-6 col-sm-8 col-md-offset-3 col-sm-offset-2">
            <form action="/profilepicture" method="POST" enctype="multipart/form-data">
                
                <% if(errors.length>0){ %>
                <div class="alert alert-danger">
                    <% errors.forEach(error=>{ %> <%= error %><br />
                    <% }) %>
                </div>
                <% } %>
                
                
           
                <h2>Upload Profile Picture</h2>
                <img id="output" width="530" /> </br>
                <div class="custom-file mb-3"></div>
                    <input type="file" name="file" id="file" class="custom-file-input" accept="image/*" onchange="loadFile(event)">
                    </br>
                    <button  type="submit" value="submit" class="btn btn-primary">Upload</button>
                </div>
            </form>
            <script>
                var loadFile = function(event) {
                    var image = document.getElementById('output');
                    image.src = URL.createObjectURL(event.target.files[0]);
                };
            </script></br></br>
        </div>
    </div>
</section>
<!-- signup section End -->	

<%- include('../partials/footer.ejs') %>		