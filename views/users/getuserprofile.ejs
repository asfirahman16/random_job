<%- include('../partials/head.ejs') %>
<title>Profile | Random Jobs</title>
<%- include('../partials/navprofilepages.ejs') %>

<style> 
    div{
        align-items: center;
    }
</style>


<!-- Main jumbotron for a primary marketing message or call to action -->
<section class="inner-banner">
    <div>
        <div class="caption">
            <text color:"#ffffff" style="font-size: 45px"><%= user.name %></text>
            <p><%= user.userOccupation %></p>
        </div>
    </div>
</section>


<section class="profile-detail">
    <div class="container">
        <div class="col-md-12">
            <div class="row">
                <div class="basic-information">
                    <div class = row>
                        <div class="col-md-3 col-sm-3"></div>
                        <div style ="text-align:center" class="col-md-6 col-sm-6">
                            
                            <%if(errors.length>0){if(errors=="Profile has been updated!"){%>
                                <div class="alert alert-success"><%=errors%></div>
                            <%}else if(errors=="Description has been updated!"){%>
                                <div class="alert alert-success"><%=errors%></div>
                            <%}else if(errors=="Profile Picture has been uploaded succfessfully!"){%>
                                <div class="alert alert-success"><%=errors%></div>
                            <%}else if(errors=="CV has been uploaded succfessfully!"){%>
                                <div class="alert alert-success"><%=errors%></div>
                            <%}else{%>
                                <div class="alert alert-danger"><%=errors%></div>
                            <%}%><%}%>
                        </div>
                        <div class="col-md-3 col-sm-3"></div>
                    </div>
                    
                    <h4>Profile Info</h4>
                    <br>
                    <div class="col-md-9 col-sm-9">
                        <div class="profile-content">
                            <ul class="information">
                                <li><h5>General Info</h5></li>
                                <li><span>Name:</span><%= user.name %></li>
                                <li><span>Email:</span><%= user.email %></li>
                                <li><span>Phone:</span><%= user.phone %></li>
                                <li><span>Age:</span><%= user.age %></li>
                                <li><span>User Type:</span><%= user.usertype %></li></br>
                                <li><h5>Address</h5></li>
                                <li><span>Union:</span><%= user.address.union %></li>
                                <li><span>Thana:</span><%= user.address.thana %></li>
                                <li><span>District:</span><%= user.address.district %></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-3">
                        <% const pURL="userpic/"+user._id%>
                        <img style="border-radius: 50%;" width="250" height="250" src="<%=pURL%>" alt="Profile Picture">
                    </div>
                    <div class="col-md-3 col-sm-3"></div>
                    <div class="col-md-9 col-sm-9">
                        <ul class="social">
                            <%if (user.linkedin != null){%>
                                <li><a href="<%= user.linkedin %>" class="linkedin"><i class="fa fa-linkedin"></i>Linked In</a></li>
                            <%}%>
                            <%if (user.facebook != null){%>
                                <li><a href="<%= user.facebook %>" class="facebook"><i class="fa fa-facebook"></i>Facebook</a></li>
                            <%}%>
                        </ul>
                    </div>
                </div>
            </div>
            <div>
                </br>
                </br>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <%if (user.description != null){%>
                        <h5>Description</h5>
                        <p><%= user.description %></p>
                    <%}%>
                </div>
            </div>
            <br> <br> <br>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <%if (user.cv != null){%>
                        <% if(user.usertype=="jobseeker"){ %>
                            <h5>CV</h5>
                        <% } else { %>
                            <h5>More detailed Information</h5>
                        <% } %>
                        <% const sURL="usercv/"+user._id%>
                        <embed src="<%= sURL %>" width="100%" height="800px" />
                    <%}%>
                </div>
            </div>
            <div class="row">   
            </div>
        </div>
    </div>
</section>

<%- include('../partials/footer.ejs') %>	
